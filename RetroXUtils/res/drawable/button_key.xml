<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

   <item android:state_pressed="true">
      <shape android:shape="rectangle">
         <stroke android:width="@dimen/button_bar_stroke_width" android:color="@color/pal_hl_background"/>
      </shape>
   </item>
   
   <item android:state_focused="true">
      <shape android:shape="rectangle">
         <stroke android:width="@dimen/button_bar_stroke_width" android:color="@color/pal_text_hl"/>
      </shape>
   </item>
   
   <item>
      <shape android:shape="rectangle">
         <stroke android:width="@dimen/button_bar_stroke_width" android:color="#20FFFFFF"/>
      </shape>
   </item>
</selector>