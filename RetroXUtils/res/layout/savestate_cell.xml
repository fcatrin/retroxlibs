<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/text_normal_pad"
    android:background="@drawable/savestate_rect"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/savestate_image"
        android:layout_width="@dimen/screenshot_width"
        android:layout_height="@dimen/screenshot_height"
        android:alpha="0.8"
        android:scaleType="centerCrop" />
    <TextView 
        android:id="@+id/savestate_label"
        android:background="#80000000"
        android:layout_width="@dimen/text_normal"
        android:layout_height="@dimen/screenshot_height"
        android:gravity="center"
        android:textSize="@dimen/text_small"
        android:textColor="@color/pal_text1"
        />

</LinearLayout>