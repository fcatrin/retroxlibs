<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="NormalFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="TitleFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>
    
	<style name="ActionButton">
        <item name="android:textColor">@color/pal_text1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/text_big</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:background">@drawable/button_bar</item>
        <item name="android:alpha">0.8</item>
		<item name="android:layout_marginLeft">@dimen/spacing_small</item>
		<item name="android:layout_marginRight">@dimen/spacing_small</item>
	</style>

	  <style name="ActionButtonVertical" parent="ActionButton">
	      <item name="android:layout_width">match_parent</item>
	      <item name="android:paddingLeft">@dimen/spacing_small</item>
	      <item name="android:paddingRight">@dimen/spacing_small</item>
	</style>
    <style name="GamepadLabel">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/pal_text_hl</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
	</style>
	
   <style name="KeyButton">
		<item name="android:textColor">@color/pal_text1</item>
		<item name="android:textSize">@dimen/text_normal</item>
		<item name="android:background">@drawable/button_key</item>
		<item name="android:gravity">center</item>
		<item name="android:minHeight">0dp</item>
   </style>
    
</resources>
