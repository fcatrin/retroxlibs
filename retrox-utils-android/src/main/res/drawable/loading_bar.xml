<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  
<!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                    android:startColor="@color/loading_bar_bg_start"
                    android:centerColor="@color/loading_bar_bg_center"
                    android:endColor="@color/loading_bar_bg_end"
                    android:centerY="1.0"
                    android:angle="270"
            />
        </shape>
    </item>

 <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/loading_bar_start"
                    android:centerColor="@color/loading_bar_center"
                    android:endColor="@color/loading_bar_end"
                    android:centerY="1.0"
                    android:angle="270"
                />
            </shape>
        </clip>
    </item>

</layer-list>