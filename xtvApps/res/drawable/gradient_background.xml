<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- First part is a gradient -->
    <item android:left="0dp" android:right="0dp" android:bottom="130px"> 
        <shape android:shape="rectangle">
            <gradient android:angle="-90" 
                android:startColor="#00000000"
                android:endColor="#F0000000" />
        </shape>
    </item>
    
    <!-- Second part is plain color. Slightly transparent -->
    <item android:top="108px" > 
        <shape android:shape="rectangle">
            <solid android:color="#F0000000"/>
        </shape>
    </item>
</layer-list>